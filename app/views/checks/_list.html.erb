<p>
<%= link_to new_church_check_path(church), class: "btn btn-success btn-sm" do %>
    <span class="glyphicon glyphicon-plus"></span> 
    <%= t("helpers.submit.create", model: t("activerecord.models.check")) %>
<% end %>
</p>

<table class="table table-striped table-hover round-topleft round-topright">
    <tr class="active">
        <th><%= t("activerecord.attributes.check.amount") %></th>
        <th><%= t("activerecord.model.church") %></th>
        <th><%= t("activerecord.attributes.check.number") %></th>
        <th><%= t("activerecord.attributes.check.description") %></th>
        <th></th>
        <th></th>
    </tr>
    <% checks.each do |check| %>
        <tr>
            <td><%= link_to check.display_amount, [church, check] %></td>
            <td><%= link_to check.church.short_name, check.church %></td>
            <td><%= check.number %></td>
            <td><%= check.description %></td>
            <td>
                <%= link_to edit_church_check_path(church, check), data: { toggle: "tooltip" }, title: t("edit"), class: "edit" do %>
                    <span class="glyphicon glyphicon-pencil"><span>
                <% end %>
            </td>
            <td>
                <%= link_to church_check_path(church, check), data: { method: :delete, toggle: "tooltip", question: raw(t("confirm_check_delete", name: check.display_amount)) }, title: t("delete") do %>
                    <span class="glyphicon glyphicon-trash"><span>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>